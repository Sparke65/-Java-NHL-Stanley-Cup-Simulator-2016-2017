	        System.out.println("The Pittsburgh Penguins won " + penguins + " time(s).");
	        System.out.println("The St. Louis Blues won " + blues + " time(s).");
	        System.out.println("The San Jose Sharks won " + sharks + " time(s).");
	        System.out.println("The Tampa Bay Lightning won " + lightning + " time(s).");
	        System.out.println("The Toronto Maple Leafs won " + mapleLeafs + " time(s).");
	        System.out.println("The Vancouver Canucks won " + canucks + " time(s).");
	        System.out.println("The Washington Capitals won " + capitals + " time(s).");
	        System.out.println("The Winnipeg Jets won " + jets + " time(s).");
	        break;
	        
	        default:
	        	System.out.println("Please choose a number from 1-31.");
	        	multiSim(args);
	        
	      }
      }
      else{
    	  System.out.println("The number must be between 0 and 100!");
    	  multiSim(args);
      }
      
		System.out.println("\n(1) Simulate again\n"
						 + "(2) Menu\n"
						 + "(3) Exit\n");
		int menu2 = input.nextInt();

		switch(menu2){

			case 1:
				multiSim(args);
				break;
	
			case 2:
				main(args);
				break;

			case 3:
				System.out.println("Thanks for playing!");
				break;
	
			default:
				System.out.println("Please select 1, 2, or 3!\n");
				sim(args);
		}
	  
  	}
 
 }
