public class Simulation{

  public static void main(String[] args){
    
    Scanner input = new Scanner(System.in);
    
    System.out.println(
                   "      -------------------------\n"
    		         + "      | Stanley Cup Simulator |\n"
    		         + "      |      Sean  Parker     |\n"
    		         + "      |         2016          |\n"
    		         + "      -------------------------\n\n"       
